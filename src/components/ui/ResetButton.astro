---
export interface Props {
	onClick?: string;
	class?: string;
}

const { onClick = 'location.reload()', class: className = '' } =
	Astro.props;
---

<div class={`text-center ${className}`}>
	<button
		class='bg-red-600 hover:bg-red-700 text-white font-semibold py-2.5 px-6 rounded-lg transition-colors text-base focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-900'
		onclick={onClick}
		type='button'>
		Reset All Counters
	</button>
</div>
