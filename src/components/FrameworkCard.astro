---
export interface Props {
	title: string;
	color: string;
}

const { title, color } = Astro.props;
---

<div
	class='bg-gray-800/50 backdrop-blur-sm rounded-xl px-6 py-4 border border-gray-700/50 h-44 flex flex-col justify-center items-center space-y-4'>
	<h3
		class={`text-xl font-semibold ${color} flex items-center justify-center`}>
		<slot name='icon' />
		{title}
	</h3>
	<div class='flex items-center justify-center'>
		<slot />
	</div>
</div>
