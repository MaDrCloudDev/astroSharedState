---
export interface Props {
	initialCount?: number;
}

const { initialCount = 0 } = Astro.props;
---

<div x-data={`{ count: ${initialCount} }`}>
	<button
		class='border bg-yellow-600 rounded-md px-2 my-1'
		title='A AlpineJS Component'
		x-on:click='count++'>
		AlpineJS State: <data
			x-text='count'
			class='text-black'
		></data>
	</button>
</div>
